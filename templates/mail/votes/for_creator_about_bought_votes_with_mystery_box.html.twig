{% extends "mail/layout/template.html.twig" %}

{% block hidden %}
    User purchased paid votes
{% endblock %}

{% block h1 %}
    User purchased paid votes
{% endblock %}

{% block h2 %}
    Dear, {{ user_name }}
{% endblock %}

{% block body %}
    <tr>
        <td valign="top" align="left" style="text-align:left;padding:0px 20px;" class="padding1">
            <p class="dynamic" style=" margin:0px; font-family:Arial,sans-serif; font-size:16px; line-height:24px; color:#000000; font-weight: 400; ">
                User <a href="{{ buyer_url }}">{{ buyer_name }}</a> purchased {{ votes_count }} votes and was assigned your {{ mystery_box_type }} type Mystery Box:
            </p>
        </td>
    </tr>
    <tr>
        <td height="8" style="font-size:12px; line-height:8px;">&nbsp;</td>
    </tr>
    <tr>
        <td valign="top" align="left" style="text-align:left;padding:0px 20px;" class="padding1">
            <p class="dynamic" style=" margin:0px; font-family:Arial,sans-serif; font-size:16px; line-height:24px; color:#000000; font-weight: 400; ">
                <img src="{{ mystery_box_image_url }}" style="width:100%; max-width:300px; height: auto;" alt="mysterybox preview">
            </p>
        </td>
    </tr>
    <tr>
        <td height="8" style="font-size:12px; line-height:8px;">&nbsp;</td>
    </tr>
{% endblock %}