{% if ea.crud.currentAction == 'detail' %}
    <a href="{{ ea_url().setRoute('mysterybox_approve', { id: field.value }) }}" role="button" class="btn btn-success btn-xl" onclick="return confirm('Approve?');" id="link_approve">Approve</a>
    <a href="{{ ea_url().setRoute('mysterybox_block', { id: field.value }) }}" role="button" class="btn btn-danger btn-xl" onclick="clickBlock();return false;" id="link_block">Block</a>

    <style>
        .btn-xl {
            padding: 20px 20px;
            font-size: 20px;
            border-radius: 10px;
            margin: 5px;
        }
    </style>

    <script type="text/javascript">
        function clickBlock() {
            let ok = confirm('Block?');
            if (ok) {
                var blockDescriptionValue = document.getElementById("block_description").value;

                var selectBox = document.getElementById("block_reason");
                var blockReasonValue = selectBox.options[selectBox.selectedIndex].value;

                window.location = document.getElementById("link_block") + '&block_reason=' + blockReasonValue + '&block_description=' + blockDescriptionValue;
            }
        }
    </script>

{% endif %}