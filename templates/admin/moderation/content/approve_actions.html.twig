{% if ea.crud.currentAction == 'detail' %}
    <a href="{{ ea_url().setRoute('content_approve', { id: field.value }) }}" role="button" class="btn btn-success btn-xl" onclick="return confirm('Approve?');">Approve</a>
    <a href="{{ ea_url().setRoute('content_block', { id: field.value }) }}" role="button" class="btn btn-danger btn-xl" onclick="clickBlock();return false;" id="link_block">Block</a>

    <style>
        .btn-xl {
            padding: 20px 20px;
            font-size: 20px;
            border-radius: 10px;
            margin: 5px;
        }
    </style>

    <script type="text/javascript">
        function clickBlock() {
            let ok = confirm('Block?');
            if (ok) {
                var selectBox = document.getElementById("block_reason");
                var selectedValue = selectBox.options[selectBox.selectedIndex].value;
                window.location = document.getElementById("link_block") + '&block_reason=' + selectedValue;
            }
        }
    </script>
{% endif %}